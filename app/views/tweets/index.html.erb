<% if user_signed_in? %>
<div class="col-xs-12 col-md-3" style="border: 1px solid #009000">
<%= render 'form', tweet: @tweet %>
</div>
<div class="col-xs-6 col-md-9" style="border: 1px solid #009000">
<h1>Tweets</h1>

<table class= "table table-striped table-bordered table-hover ">
  <thead >
    <tr>
      <th>Name</th>
      <th>Tweet</th>
      <th>Favorite</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user_name %></td>
        <td><%= tweet.content %></td>
        <td>
        <% if current_user.likes.find_by(tweet_id: tweet.id) %>
          <%= link_to'★',unlike_path(tweet.id),method: :delete %>
          <% else %>
          <%= link_to '☆', like_path(tweet.id),method: :post %>
        <% end %>
        <%= tweet.likes.count %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
<% else %>
<div class="col-xs-6 col-md-12" style="border: 1px solid #009000">
<h1>Tweets</h1>

<table class= "table table-striped table-bordered table-hover ">
  <thead >
    <tr>
      <th>Name</th>
      <th>Tweet</th>
      <th>Favorite</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user_name %></td>
        <td><%= tweet.content %></td>
        <td>
        <%= tweet.likes.count %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
<% end %>
